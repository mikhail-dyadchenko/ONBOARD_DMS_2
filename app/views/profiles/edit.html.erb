<h1>Edit Profile</h1>

<%= form_with model: [@user, @profile], local: true do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>
  </div>

  <div>
    <%= form.label :bio %>
    <%= form.text_area :bio %>
  </div>

  <div>
    <%= form.label :contact %>
    <%= form.text_field :contact %>
  </div>

  <div>
    <%= form.submit "Update Profile" %>
  </div>
<% end %>

<%= link_to "Back to Profile", user_profile_path(@user) %>